# bazel 6.3.1-homebrew
# Apple clang version 14.0.3 (clang-1403.0.22.14.1)

# gcc 13.2.0
# https://gcc.gnu.org/gcc-13/
build --cxxopt=-g
build --cxxopt=-O3
build --cxxopt=-std=c++23
build --cxxopt=-Wall
# build --cxxopt=-Werror
build --cxxopt=-fdiagnostics-color
build --cxxopt=-Wfatal-errors

# build --cxxopt=-fsanitize=address
# build --linkopt=-fsanitize=address

build --spawn_strategy=standalone
