[cc_binary(
    name = cc_name.split('.')[0],
    srcs = [cc_name],
    linkopts = select({
        "@bazel_tools//tools/osx:darwin": [
            "-lboost_fiber-mt",
            "-lboost_context-mt",
        ],
        "//conditions:default": [
            "-lboost_fiber",
            "-lboost_context",
        ],
    }),
) for cc_name in glob(
    include = ["**/*.cpp"],
)]
